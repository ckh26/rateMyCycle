<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script>
$(document).ready(function() {
 
$("#good").hide();
$("#fair").hide();
$("#poor").hide();
$("#terrible").hide();
 
$("#greenCircle").mouseenter(function(){
    $(this).css("background","#8AE65C");
    $(this).css("color","#000000");
});
    
    $("#greenCircle").mouseleave(function(){
    $(this).css("background","#C2FFAD");
    $(this).css("color","#ffffff");
      });
    
$("#yellowCircle").mouseenter(function(){
    $(this).css("background","#FFCC00");
    $(this).css("color","#001F4C");
});
    
$("#yellowCircle").mouseleave(function(){
$(this).css("background","#FFFF66");
$(this).css("color","#6699FF");
});
    
$("#redCircle").mouseenter(function(){
    $(this).css("background","#FF5C33");
    $(this).css("color","#001F4C");
});
    
$("#redCircle").mouseleave(function(){
$(this).css("background","#FF8080");
$(this).css("color","white");
});
    
$("#greyCircle").mouseenter(function(){
    $(this).css("background","black"); 
    $(this).css("color","#E62E00");
});
    
$("#greyCircle").mouseleave(function(){
$(this).css("background","grey");
$(this).css("color","white");
});
   

$("#greenCircle").click(function(){
    $(this).css("text-decoration","underline");
    $(this).css("color","#000000");
    $("#good").show();
});

 $("#greenCircle").mouseleave(function(){
    $(this).css("background","#C2FFAD");
    $(this).css("color","#ffffff");
    $(this).css("text-decoration","none");
    $(this).css("border-color","white");
$("#good").hide();

      });

$("#yellowCircle").click(function(){
    $(this).css("text-decoration","underline");
    $(this).css("color","#000000");
    $("#fair").show();
});

 $("#yellowCircle").mouseleave(function(){
$(this).css("background","#FFFF66");
$(this).css("color","#6699FF");
    $(this).css("text-decoration","none");
$("#fair").hide();
      });

$("#redCircle").click(function(){
    $(this).css("text-decoration","underline");
    $(this).css("color","#000000");
    $("#poor").show();
});

 $("#redCircle").mouseleave(function(){
$(this).css("background","#FF8080");
$(this).css("color","white");
    $(this).css("text-decoration","none");
$("#poor").hide();
      });

$("#greyCircle").click(function(){
    $(this).css("text-decoration","underline");
    $(this).css("color","#E62E00");
    $("#terrible").show();
});

 $("#greyCircle").mouseleave(function(){
$(this).css("background","#grey");
$(this).css("color","white");
    $(this).css("text-decoration","none");
$("#terrible").hide();
});

});

</script>
